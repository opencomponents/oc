{
  "name": "oc",
  "version": "0.49.1",
  "description": "A framework for developing and distributing html components",
  "main": "./dist/index.js",
  "bin": {
    "oc": "./dist/oc-cli.js"
  },
  "scripts": {
    "build": "tsc && node tasks/build.js",
    "git-stage-and-push": "node tasks/git-stage-and-push.js",
    "npm-publish": "node tasks/npm-publish.js",
    "publish-major": "npm run version-major && npm run test-silent && npm run git-stage-and-push && npm run npm-publish",
    "publish-minor": "npm run version-minor && npm run test-silent && npm run git-stage-and-push && npm run npm-publish",
    "publish-patch": "npm run version-patch && npm run test-silent && npm run git-stage-and-push && npm run npm-publish",
    "test": "npm run build && node tasks/mochaTest.js",
    "test-silent": "npm run build && node tasks/mochaTest.js --silent",
    "version-major": "node tasks/version.js --type=\"major\"",
    "version-minor": "node tasks/version.js --type=\"minor\"",
    "version-patch": "node tasks/version.js --type=\"patch\"",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --single-quote --write"
    ]
  },
  "engines": {
    "node": ">=12"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/opencomponents/oc"
  },
  "author": "Matteo Figus",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/opencomponents/oc/issues"
  },
  "homepage": "https://github.com/opencomponents/oc",
  "keywords": [
    "open components",
    "components",
    "oc"
  ],
  "devDependencies": {
    "@types/node": "^16.9.6",
    "@types/yargs": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "chai": "4.3.4",
    "chalk": "4.1.2",
    "glob": "7.2.0",
    "husky": "7.0.2",
    "injectr": "0.5.1",
    "lint-staged": "11.1.2",
    "minimist": "1.2.5",
    "mocha": "9.1.1",
    "node-emoji": "1.11.0",
    "oc-template-es6-compiler": "1.1.10",
    "prettier-eslint-cli": "5.0.1",
    "semver-sort": "0.0.4",
    "simple-git": "2.45.1",
    "sinon": "11.1.2",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "accept-language-parser": "1.5.0",
    "async": "3.2.1",
    "basic-auth-connect": "^1.0.0",
    "body-parser": "1.19.0",
    "builtin-modules": "^3.0.0",
    "chokidar": "^3.5.2",
    "colors": "1.4.0",
    "cross-spawn": "7.0.3",
    "dependency-graph": "0.11.0",
    "errorhandler": "^1.5.0",
    "express": "4.17.1",
    "form-data": "4.0.0",
    "fs-extra": "10.0.0",
    "getport": "^0.1.0",
    "livereload": "0.9.3",
    "lodash": "^4.17.15",
    "minimal-request": "3.0.0",
    "morgan": "1.10.0",
    "multer": "^1.3.0",
    "nice-cache": "0.0.5",
    "oc-client": "4.0.0",
    "oc-client-browser": "1.5.3",
    "oc-empty-response-handler": "1.0.1",
    "oc-get-unix-utc-timestamp": "1.0.3",
    "oc-s3-storage-adapter": "1.1.6",
    "oc-storage-adapters-utils": "1.0.3",
    "oc-template-es6": "1.0.3",
    "oc-template-handlebars": "6.0.21",
    "oc-template-handlebars-compiler": "6.2.13",
    "oc-template-jade": "7.0.2",
    "oc-template-jade-compiler": "7.0.3",
    "open": "8.2.1",
    "parse-author": "2.0.0",
    "read": "1.0.7",
    "require-package-name": "2.0.1",
    "response-time": "^2.3.2",
    "semver": "7.3.5",
    "semver-extra": "3.0.0",
    "serialize-error": "8.1.0",
    "targz": "1.0.1",
    "try-require": "^1.2.1",
    "yargs": "17.2.0"
  }
}
